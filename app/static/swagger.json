    "externalDocs": {
        "description": "Find out more about Swagger",
        "url": "http://swagger.io"
    }
    ,
    "tags": [
        {
            "name": "solicitudes",
            "description": "Solicitudes de materiales"
        },
        {
            "name": "materiales",
            "description": "About materiales"
        }
    ],
    "paths": {
        "/materiales": {
            "get": {
                "tags": [
                    "materiales"
                ],
                "summary": "Listado de materiales",
                "description": "Obtiene listado de materiales disponibles junto a su ID",
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Materiales"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/solicitudes/nueva": {
            "post": {
                "tags": [
                    "solicitudes"
                ],
                "summary": "Agregar solicitud",
                "requestBody": {
                    "description": "Parámetros para realizar la solicitud de materiales",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Solicitud"
                            }
                        },
                        "application/xml": {
                            "schema": {
                                "$ref": "#/components/schemas/Solicitud"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Solicitud aceptada",
                        "content": {}
                    },
                    "400": {
                        "description": "Solicitud inválida",
                        "content": {}
                    },
                    "405": {
                        "description": "Método no permitido",
                        "content": {}
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "x-codegen-request-body-name": "body"
            }
        }
    },
    "components": {
        "schemas": {
            "Materiales": {
                "type": "object",
                "properties": {
                    "id_material": {
                        "type": "integer",
                        "format": "int32",
                        "required": true
                    },
                    "nombre": {
                        "type": "string",
                        "required": true
                    }
                }
            },
            "Solicitud": {
                "type": "object",
                "properties": {
                    "fecha_necesaria_entrega": {
                        "type": "string",
                        "format": "date"
                    },
                    "materiales": {
                        "type": "object",
                        "example": "{\"4\":\"20\",\"3\":\"13\"}"
                    }
                }
            }
        },
        "securitySchemes": {
            "Bearer": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}